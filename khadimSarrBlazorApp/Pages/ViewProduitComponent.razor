@page "/product/{id:int}"

@inject RechercherProduit.IViewProduct viewProduct

<h3>Product Details </h3>


<div class="card" style="width: 28rem;">

    <div class="card-body">

        <img src="@produit.ImageLink" />
        <h5 class="card-title"> @produit.Name </h5>

        <h6 class="card-subtitle mb-2 text-muted"> @produit.Brand</h6>

        <hr />

        <p>

            Price : <label style="color:darkred">
                @produit.Price.ToString("c")
            </label>


        </p>

        <p class="card-text">
            @produit.Description

        </p>
    </div>

</div>

<br />

<NavLink href="produits">Back to Products</NavLink>


@code {

    private Models.Product produit;



    [Parameter]

    public int Id { get; set; }



    protected override void OnParametersSet()

    {

        base.OnParametersSet();



        if (Id > 0)

            produit = viewProduct.Execute(Id);



    }


}
